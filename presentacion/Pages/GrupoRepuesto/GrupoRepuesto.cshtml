@page
@model presentacion.Pages.GrupoRepuestoModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/GrupoRepuesto.css" />
</head>

  <h3 class="text-center p-2 mb-2 breadcrumb-item active" id="tituloGrupoR"><strong>Grupo de Repuestos</strong></h3>

  <a asp-page="EditGrupoR" class="btn btn-outline-primary" id="btnAdd">
    Agregar Grupo
  </a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col"class="text-center">N°</th>
      <th scope="col" class="text-center">Grupo</th>
      <th scope="col" class="text-center">Estado</th>
      <th colspan="3" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var grupoRepuestos in Model.grupoRepuesto)
    {
        <tr>
          @if (grupoRepuestos.Estado == true)
          {
            <td class="text-center">@grupoRepuestos.Id</td>
            <td class="text-center">@grupoRepuestos.Grupo</td>
            <td class="text-center"><span class="badge rounded-pill bg-primary">Activo</span></td>
            <td class="text-center">
              <a class="btn btn-outline-info table-btn"  asp-page="./InfoGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-circle-info"></i>
              </a>
              <a class="btn btn-outline-primary table-btn" asp-page="./EditGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-user-pen"></i>
              </a>
              <a class="btn btn-outline-danger table-btn" asp-page="./DeleteGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          }
          else
          {
            <td class="text-center">@grupoRepuestos.Id</td>
            <td class="text-center">@grupoRepuestos.Grupo</td>
            <td class="text-center"><span class="badge rounded-pill bg-danger">Inactivo</span></td> 
            <td class="text-center">
              <a class="btn btn-outline-info table-btn"  asp-page="./InfoGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-circle-info"></i>
              </a>
              <a class="btn btn-outline-primary table-btn" asp-page="./EditGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-user-pen"></i>
              </a>
              <a class="btn btn-outline-danger table-btn" asp-page="./DeleteGrupoR" asp-route-IdgrupoR="@grupoRepuestos.Id">
               <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          }
            
        </tr>
    }
 </tbody>
</table>
