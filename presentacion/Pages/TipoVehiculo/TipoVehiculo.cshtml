@page
@model presentacion.Pages.TipoVehiculoModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/TipoVehiculo.css" />
</head>

  <h3 class="text-center p-2 mb-2 breadcrumb-item active" id="tituloTipoVe"><strong>Tipo de Vehiculos</strong></h3>

  <a asp-page="EditTipoV" class="btn btn-outline-primary" id="btnAdd">
    Agregar Vehiculo
  </a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col"class="text-center">N°</th>
      <th scope="col"class="text-center">Tipo</th>
      <th scope="col"class="text-center">Descripcion</th>
      <th scope="col"class="text-center">Estado</th>
      <th colspan="3" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var tipoVehiculos in Model.tipoVehiculo)
    {
        <tr>
            @if (tipoVehiculos.Estado == true)
            {
                <td class="text-center">@tipoVehiculos.Id</td>
                <td class="text-center">@tipoVehiculos.Tipo</td>
                <td class="text-center">@tipoVehiculos.Descripcion</td>
                <td class="text-center"><span class="badge rounded-pill bg-primary">Activo</span></td>
                <td class="text-center">
                  <a class="btn btn-outline-info table-btn"  asp-page="./InfoTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-circle-info"></i>
                  </a>
                  <a class="btn btn-outline-primary table-btn" asp-page="./EditTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-user-pen"></i>
                  </a>
                  <a class="btn btn-outline-danger table-btn" asp-page="./DeleteTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-trash-can"></i>
                  </a>
              </td>
            }
            else
            {
                <td class="text-center">@tipoVehiculos.Id</td>
                <td class="text-center">@tipoVehiculos.Tipo</td>
                <td class="text-center">@tipoVehiculos.Descripcion</td>
                <td class="text-center"><span class="badge rounded-pill bg-danger">Inactivo</span></td> 
                <td class="text-center">
                  <a class="btn btn-outline-info table-btn"  asp-page="./InfoTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-circle-info"></i>
                  </a>
                  <a class="btn btn-outline-primary table-btn" asp-page="./EditTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-user-pen"></i>
                  </a>
                  <a class="btn btn-outline-danger table-btn" asp-page="./DeleteTipoV" asp-route-IdtipoV="@tipoVehiculos.Id">
                    <i class="fa-solid fa-trash-can"></i>
                  </a>
              </td>
            }
           
        </tr>
    }
 </tbody>
</table>
