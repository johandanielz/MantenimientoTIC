@page
@model presentacion.Pages.RevOpeModel
@{
}
<head>
  <link rel="stylesheet" href="~/css/Persona.css" />
</head>

<h3 class="text-center p-2 mb-2 breadcrumb-item active" id="tituloPersona"><strong>Rev-Operaciones</strong></h3>

<a asp-page="EditRevOpe" class="btn btn-outline-primary" id="btnAdd">
  Agregar Rev-Operacion
</a>
<br>
<br>
<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col" class="text-center">N°</th>
      <th scope="col" class="text-center">Revision</th>
      <th scope="col" class="text-center">Operacion</th>
      <th colspan="3" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var RevOpers in Model.revOperaciones)
    {
      <tr>
            <td class="text-center">@RevOpers.RevOperacionesId</td>
            <td class="text-center">@RevOpers.revision.vehiculo.Placa</td>
            <td class="text-center">@RevOpers.operacion.Nombre</td>
            <td class="text-center">
              <a class="btn btn-outline-info table-btn" asp-page="./InfoRevOpe" asp-route-IdrevOpe="@RevOpers.RevOperacionesId">
                <i class="fa-solid fa-circle-info"></i>
              </a>
              <a class="btn btn-outline-primary table-btn" asp-page="./EditRevOpe" asp-route-IdrevOpe="@RevOpers.RevOperacionesId">
                <i class="fa-solid fa-user-pen"></i>
              </a>
              <a class="btn btn-outline-danger table-btn" asp-page="./DeleteRevOpe" asp-route-IdrevOpe="@RevOpers.RevOperacionesId">
                <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
      </tr>
    }
  </tbody>
</table>