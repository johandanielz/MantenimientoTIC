@page
@model presentacion.Pages.TecnicoModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/Color.css" />
</head>

  <h3 class="text-center p-2 mb-2 breadcrumb-item active" id="tituloColor"><strong>Tecnicos</strong></h3>

  <a asp-page="EditTecnico" class="btn btn-outline-primary" id="btnAdd">
    Agregar Tecnico 
  </a>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col"class="text-center">N°</th>
      <th scope="col" class="text-center">Tecnico</th>
      <th scope="col" class="text-center">Tipo de Vehiculo</th>
      <th scope="col" class="text-center">Estado</th>
      <th colspan="3" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var tecnicos in Model.tecnico)
    {
        <tr>
          @if (tecnicos.Estado == true)
          { 
            <td class="text-center">@tecnicos.TecnicoId</td>
            <td class="text-center">@tecnicos.persona.Nombre</td>
            <td class="text-center">@tecnicos.tipoVehiculo.Tipo</td>
            <td class="text-center"><span class="badge rounded-pill bg-primary">Activo</span></td>
            <td class="text-center">
              <a class="btn btn-outline-info table-btn"  asp-page="./InfoTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-circle-info"></i>
              </a>
              <a class="btn btn-outline-primary table-btn" asp-page="./EditTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-user-pen"></i>
              </a>
              <a class="btn btn-outline-danger table-btn" asp-page="./DeleteTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          }else{
            <td class="text-center">@tecnicos.TecnicoId</td>
            <td class="text-center">@tecnicos.persona.Nombre</td>
            <td class="text-center">@tecnicos.tipoVehiculo.Tipo</td>
            <td class="text-center"><span class="badge rounded-pill bg-danger">Inactivo</span></td>
            <td class="text-center">
              <a class="btn btn-outline-info table-btn"  asp-page="./InfoTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-circle-info"></i>
              </a>
              <a class="btn btn-outline-primary table-btn" asp-page="./EditTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-user-pen"></i>
              </a>
              <a class="btn btn-outline-danger table-btn" asp-page="./DeleteTecnico" asp-route-Idtecnico="@tecnicos.TecnicoId">
               <i class="fa-solid fa-trash-can"></i>
              </a>
            </td>
          }
           
        </tr>
    }
 </tbody>
</table>
