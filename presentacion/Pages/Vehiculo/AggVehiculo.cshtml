@page
@model presentacion.Pages.AggVehiculoModel
@{
}

<head>
    <link rel="stylesheet" href="~/css/Persona.css" />
</head>

@if (@Model.vehiculo.VehiculoId > 0 )
    {
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Sección Actualizar Personas</li>
        </ol>
        <h3>Modificar Datos</h3>
    }else
    {
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Sección Agregar Vehiculo</li>
        </ol>
        <h3>Creación de Vehiculos</h3>
    }


<div class="container" id="formList">
    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="vehiculo.VehiculoId"/>
        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Placa</label>
            </div>
            <div class="col-md-3">
                <input type="text" asp-for="vehiculo.Placa" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor digite su Matricula
                </div>
            </div>

            <div class="col-md-2">
                <label class="col-form-label">Modelo</label>
            </div>
            <div class="col-md-3 col-lg-3">
                <input type="text" asp-for="vehiculo.Modelo" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor digite el Modelo
                </div>
            </div>
        </div>
        <br>
        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Servicio</label>
            </div>
            <div class="col-md-3">
                <input type="text" asp-for="vehiculo.Servicio" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor digite el Servicio
                </div>
            </div>
            <div class="col-md-2">
                <label class="col-form-label">Color</label>
            </div>
            <div class="col-md-3 col-lg-3">
                <select  class="form-select" asp-for="vehiculo.ColorId" required>
                        @foreach (var colores in Model.color)
                    {
                            <option value="@colores.ColorId">@colores.Nombre</option>
                    } 
                </select>
            </div>
        </div>
        <br>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Estilo</label>
            </div>
            <div class="col-md-3">
                <select class="form-select" asp-for="vehiculo.EstiloId" required>

                 @foreach (var estilos in Model.estilo)
                {
                     <option value="@estilos.EstiloId">@estilos.Nombre</option>
                } 
                </select> 
            </div>
                <div class="invalid-feedback">
                    Por favor seleccion una opcion
                </div>
            <div class="col-md-2">
                <label class="col-form-label">Marca</label>
            </div>
            <div class="col-md-3 col-lg-3">
                 <select  class="form-select" asp-for="vehiculo.MarcaId" required>
                @foreach (var marcas in Model.marca)
                {
                    <option value="@marcas.MarcaId">@marcas.Nombre</option>
                }      
                 </select> 
            </div>
        </div>
        <br>
        <div class="row col-md-10">
            <div class="col-md-2">
                    <label class="col-form-label">Tipo Vehiculo</label>
                </div>
                <div class="col-md-3">
                    <select  class="form-select" asp-for="vehiculo.TipoVehiculoId" required>
                        @foreach (var tipoV in Model.tipoVehiculo)
                    {
                            <option value="@tipoV.TipoVehiculoId">@tipoV.Tipo</option>
                    } 
                    </select> 
            </div>
            <div class="col-md-2">
                    <label class="col-form-label">Propietario</label>
            </div>
            <div class="col-md-3 col-lg-3">
            
                <select  class="form-select" asp-for="vehiculo.PersonaId" required>
                    @foreach (var personas in Model.persona)
                    {
                        <option value="@personas.PersonaId">@personas.Nombre</option>
                    } 
                </select>
            </div>
        </div>
        <br>
        <div class="col-md-5 col-lg-5">
            
                <button type="submit" class="btn btn-outline-primary">Guardar</button>
                <a asp-page="/Vehiculo/Vehiculo" type="button" class="btn btn-outline-secondary">Volver</a>
        </div>
    </form>
</div>

<script src="~/js/Persona.js"></script>