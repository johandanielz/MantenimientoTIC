@page
@model presentacion.Pages.EditModel
@{
     @* ViewData["Title"] = "Modificar Persona"; *@
}
<head>
    <link rel="stylesheet" href="~/css/Persona.css" />
</head>
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Sección Personas</li>
</ol>

    @if (@Model.ListPersona.Id > 0 )
    {
        <h3>Modificar Datos</h3>
    }
    else
    {
        <h3>Creación de Personas</h3>
    }

 <div class="container" id="formList">
    <form method="post">
        <input type="hidden" asp-for="ListPersona.Id"/>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Tipo de Documento</label>
            </div>
            <div class="col-md-3">
                <select asp-for="ListPersona.Cedula" class="form-select" aria-label="Seleccione...">
                    <option value="TI">Tarjeta de Identidad</option>
                    <option value="CC">Cedula de Cuidadania</option>
                </select>
            </div>
    
            <div class="col-md-2">
                <label class="col-form-label">Numero de Documento</label>
                </div>
            <div class="col-md-3 col-lg-3">
                <input type="text" asp-for="ListPersona.Cedula" class="form-control">
            </div>
        </div>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Nombres</label>
            </div>
            <div class="col-md-3">
                <input type="text" asp-for="ListPersona.Nombre" class="form-control">
            </div>
    
            <div class="col-md-2">
                <label class="col-form-label">Apellidos</label>
            </div>
            <div class="col-md-3 col-lg-3">
                <input type="text" asp-for="ListPersona.Apellido" class="form-control">
            </div>
        </div>
        <br>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label class="col-form-label">Celular</label>
            </div>
            <div class="col-md-3">
                <input type="text" asp-for="ListPersona.Celular" class="form-control">
            </div>
    
            <div class="col-md-2">
                <label class="col-form-label">Correo</label>
            </div>
            <div class="col-md-3 col-lg-3">
                <input type="email" asp-for="ListPersona.Correo" class="form-control">
            </div>
        </div>
        <br>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label asp-for="ListPersona.Direccion" class="col-form-label"></label>
            </div>
            <div class="col-md-8">
                <input type="text" asp-for="ListPersona.Direccion" class="form-control">
            </div>
        </div>
        <br>

        <div class="row col-md-10">
            <div class="col-md-2">
                <label asp-for="ListPersona.Clasificacion" class="col-form-label"></label>
            </div>
            <div class="col-md-3">
                <select asp-for="ListPersona.Clasificacion" class="form-select" aria-label="Seleccione...">
                    <option value="Cliente">Cliente</option>
                    <option value="Empleado">Empleado</option>
                </select>
            </div>
            <div class="col-md-5 col-lg-5">
                <button type="submit" class="btn btn-outline-primary">Guardar</button>
            </div>
        </div>    
    </form>
</div> 

